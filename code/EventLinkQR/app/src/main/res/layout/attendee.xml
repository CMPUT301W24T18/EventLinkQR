<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvProfileHeader"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Profile"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_below="@id/tvProfileHeader"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfileImage"
        android:layout_centerHorizontal="true"
        android:text="Edit Profile Photo" />

    <TextView
        android:id="@+id/tvFullNameLabel"
        android:layout_width="112dp"
        android:layout_height="34dp"
        android:layout_below="@id/btnEditProfile"
        android:layout_alignParentStart="true"
        android:text="Full Name" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Allison TheRock Johnson"
        android:layout_toEndOf="@id/tvFullNameLabel"
        android:layout_below="@id/btnEditProfile" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="136dp"
        android:layout_height="31dp"
        android:layout_below="@id/etFullName"
        android:layout_alignParentStart="true"
        android:text="Phone Number" />

    <EditText
        android:id="@+id/phoneNumberEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="1233456789"
        android:layout_toEndOf="@id/phoneNumber"
        android:layout_below="@id/etFullName" />

    <TextView
        android:id="@+id/homepage"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_below="@id/phoneNumberEdit"
        android:layout_alignParentStart="true"
        android:text="Homepage" />

    <EditText
        android:id="@+id/homepageEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Enter Homepage Link"
        android:layout_toEndOf="@id/homepage"
        android:layout_below="@id/homepage" />

    <TextView
        android:id="@+id/LocationPermission"
        android:layout_width="155dp"
        android:layout_height="29dp"
        android:layout_below="@id/homepageEdit"
        android:layout_alignParentStart="true"
        android:text="Location Permission" />

    <Switch
        android:id="@+id/switchLocation"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_below="@id/LocationPermission"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchLocation"
        android:layout_alignParentEnd="true"
        android:text="Save" />

</LinearLayout>