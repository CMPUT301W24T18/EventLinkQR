<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Notifications Header -->
    <TextView
        android:id="@+id/tvNotificationsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvNotificationsHeader"
        android:layout_above="@+id/button_layout">

    <!-- ListView for displaying notifications -->
    <ListView
        android:id="@+id/lvNotifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvNotificationsHeader"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:layout_above="@+id/button_layout"
        android:padding="8dp"
        tools:ignore="MissingClass" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <!-- Back Button -->

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attendee_home_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:minWidth="88dip"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:icon="@drawable/ic_home"
            app:iconGravity="top"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attendee_scan_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Scan QR"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:icon="@drawable/ic_camera"
            app:iconGravity="top"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attendee_notification_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:icon="@drawable/ic_notifications"
            app:iconGravity="top"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attendee_profile_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:icon="@drawable/ic_profile"
            app:iconGravity="top"
            app:iconTint="@color/black" />

    </LinearLayout>


</RelativeLayout>

