<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvFullNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:text="Notification Title"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/tvFullNotificationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Notification Message"
        android:layout_below="@+id/tvFullNotificationTitle"
        android:layout_above="@+id/button_layout"
        android:padding="8dp"
        />

    <!-- Add more views here as needed -->

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <com.google.android.material.button.MaterialButton
                    android:id="@+id/attendee_home_button"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:minWidth="88dip"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    app:icon="@drawable/ic_home"
                    app:iconGravity="top"
                    app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attendee_scan_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Scan QR"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:icon="@drawable/ic_camera"
            app:iconGravity="top"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attendee_notification_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:icon="@drawable/ic_notifications"
            app:iconGravity="top"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attendee_profile_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:icon="@drawable/ic_profile"
            app:iconGravity="top"
            app:iconTint="@color/black" />

    </LinearLayout>



</RelativeLayout>
