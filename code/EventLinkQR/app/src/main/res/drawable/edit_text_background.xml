<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/fillBgColor" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
            <stroke android:width="1dp" android:color="?attr/notificationHeading" /> <!-- Border color -->
            <!-- Optional: Add padding inside the EditText -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>
</selector>
